<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.i18n.encoding" value="UTF-8"/>
 	<!-- struts2 是否允许url 动态访问方法 ,默认值是true -->
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
	
	<!-- struts2的action对象 也来源于spring的IoC容器 -->
	<constant name="struts.objectFactory" value="spring"></constant>
	
	<package name="user" namespace="/pages" extends ="struts-default">
		<action name="UserAction" class="UserActionBean">
			<result name="main">/pages/main.jsp</result>
			<result name="login">/pages/login.jsp</result>
		</action>
		
		<action name="PageAction" class="PageActionBean">
			<result name="choose">/pages/choose.jsp</result>
			<result name="historyReports">/pages/historyReports.jsp</result>
			
			<result name="ExplosiveReport">/pages/reportExplosive.jsp</result>
			<result name="FirefightingReport">/pages/reportFirefighting.jsp</result>
			<result name="HotalReport">/pages/reportHotal.jsp</result>
			
			<result name="ExplosiveReportHistory">/pages/reportExplosiveHistory.jsp</result>
			<result name="FirefightingReportHistory">/pages/reportFirefightingHistory.jsp</result>
			<result name="HotalReportHistory">/pages/reportHotalHistory.jsp</result>
			
			<result name="ExplosiveReportEdit">/pages/reportExplosiveEdit.jsp</result>
			<result name="FirefightingReportEdit">/pages/reportFirefightingEdit.jsp</result>
			<result name="HotalReportEdit">/pages/reportHotalEdit.jsp</result>
			
			<result name="ExplosiveReportReceive">/pages/reportExplosiveReceive.jsp</result>
			<result name="FirefightingReportReceive">/pages/reportFirefightingReceive.jsp</result>
			<result name="HotalReportReceive">/pages/reportHotalReceive.jsp</result>
			
			<result name="emptyReport">/pages/emptyReport.jsp</result>
		</action>
	</package>
	
	<package name="json" namespace="/pages" extends="json-default">
		<action name="AjaxAction" class="AjaxActionBean">
			<result name="*" type="json"> <!-- class="org.apache.struts2.json.JSONResult" -->
				<param name="noCache">true</param>
				<param name="contentType">text/html</param>
			</result>
		</action>
		<action name="NotificationAction" class="NotificationActionBean">
			<result name="*" type="json"> <!-- class="org.apache.struts2.json.JSONResult" -->
				<param name="noCache">true</param>
				<param name="contentType">text/html</param>
			</result>
		</action>
		
	</package>
	
</struts>
